<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="cart"
            type="com.tugasbesar.alamart.cart.Cart" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/parentAdapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:elevation="3dp"
        tools:context=".cart.CartAdapter">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/imageContent"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/pocky_2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/tvCartName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:text="@{cart.id_barang}" />
                <TextView
                    android:id="@+id/tvCartPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    app:showPrice="@{cart.totalHarga}"/>
                <LinearLayout
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:layout_marginVertical="4dp"
                        android:id="@+id/add_cart"
                        android:layout_gravity="center"
                        app:iconTint="@android:color/darker_gray"
                        app:icon="@drawable/ic_baseline_add_24"
                        app:iconGravity="textStart"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:iconPadding="0dp"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:text="@{Integer.toString(cart.jumlahBarang)}"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="10dp"
                        android:paddingHorizontal="6dp"
                        android:paddingVertical="3dp"
                        android:gravity="center"
                        android:layout_gravity="center"/>

                    <com.google.android.material.button.MaterialButton
                        android:layout_marginVertical="4dp"
                        android:id="@+id/minus_cart"
                        android:layout_gravity="center"
                        app:iconTint="@android:color/darker_gray"
                        app:icon="@drawable/ic_baseline_remove_24"
                        app:iconGravity="textStart"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:iconPadding="0dp"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

                    <com.google.android.material.button.MaterialButton
                        android:layout_marginVertical="4dp"
                        android:id="@+id/delete_cart"
                        android:layout_gravity="center"
                        app:iconTint="@android:color/darker_gray"
                        app:icon="@drawable/ic_baseline_delete_forever_24"
                        app:iconGravity="textStart"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:iconPadding="0dp"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp"
                        android:layout_marginLeft="10dp"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>
</layout>